{
  "name": "Zhoplist - Smart Shopping List",
  "short_name": "Zhoplist",
  "description": "Din smarta inköpslista - synkroniserad, offline-redo och familjevänlig",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#001122",
